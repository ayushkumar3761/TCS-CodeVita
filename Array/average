#include<bits/stdc++.h>
using namespace std;
int avg(int arr[],int n){
    int sum=0;
    for(int i=0;i<n;i++){
        sum+=arr[i];
    }
    int average=sum/n;
    return average;
}
int main(){
    int n1;
    cout<<"enter the size of an array:"<<endl;
    cin>>n1;
    int arr1[n1];
    for(int i=0;i<n1;i++){
        cin>>arr1[i];
    }
    cout<<"average"<<avg(arr1,n1);
}
