#include<bits/stdc++.h>
using namespace std;
int largestElement(int arr[], int n){
    int max=arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]>max){
            max=arr[i];
        }
    }
    return max;
}
int main(){
    
    int n;
    cout<<"Enter the size of the array:"<<endl;
    cin>>n;
    int arr1[n];
    cout<<"enter the array element:"<<endl;
    for(int i=0;i<n;i++){
        cin>>arr1[i];    
    }
    cout<<"largest element:"<<largestElement(arr1,n);
    
    
    
}
