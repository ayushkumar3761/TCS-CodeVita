#include <bits/stdc++.h>
using namespace std;
void subset(int arr[],int n){
    int min=arr[0];int count=1;
    for(int i=1;i<n;i++){
        if(min<arr[i]){
            min=arr[i];
            count++;
     }
    }
    cout<<count;
}
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    subset(arr,n);
}
